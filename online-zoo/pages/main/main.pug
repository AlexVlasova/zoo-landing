                                    .place South America
                                    btn.watch Whatch online
                            li.pet-card
                                img.pet-img.pet-img-1(src="../../assets/img/img5.jpg", alt="Giant Pandas")
                                .pet-info
                                    .pet-descr
                                        .pet-name cheetahs
                                        .pet-place Native to Africa
                                    .pet-icon.meat-icon
                                .pop-up
                                    .name cheetahs
                                    .place Africa
                                    btn.watch Whatch online
                            li.pet-card
                                img.pet-img.pet-img-1(src="../../assets/img/img6.jpg", alt="Giant Pandas")
                                .pet-info
                                    .pet-descr
                                        .pet-name Penguins
